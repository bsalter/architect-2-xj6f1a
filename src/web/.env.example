# Backend API base URL 
VITE_API_URL=http://localhost:5000/api

# Auth0 Authentication Configuration
# Your Auth0 domain (from Auth0 dashboard)
VITE_AUTH0_DOMAIN=dev-example.auth0.com
# Your Auth0 client ID (from Auth0 dashboard)
VITE_AUTH0_CLIENT_ID=your_client_id_here
# Auth0 API audience identifier
VITE_AUTH0_AUDIENCE=https://api.example.com
# URL to redirect after successful authentication
VITE_AUTH0_CALLBACK_URL=http://localhost:3000/callback

# Application Configuration
# Environment name: development, staging, or production
VITE_ENV=development
# Application name for display purposes
VITE_APP_NAME=Interaction Management System
# Default timezone for date/time display
VITE_DEFAULT_TIMEZONE=America/New_York

# Feature Flags
# Enable or disable application logging (true/false)
VITE_ENABLE_LOGS=true
# Maximum file upload size in bytes (5MB)
VITE_MAX_UPLOAD_SIZE=5242880